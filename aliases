#!/bin/bash
#
# Initialize McGill Robotics aliases and functions

# Connecting to robot
alias robot='mosh robotics@10.0.0.1'
alias robotx='ssh -Y robotics@10.0.0.1'

# Bagging
alias bag='python -m bag.run'

# Monitoring
alias glances='glances -yet 5'
alias main='tmux attach -t MAIN || tmux new -s MAIN'

# Fasd
[[ -n $(which fasd_cd) ]] && alias j='fasd_cd'

# make ros_lib from catkin_workspace
alias make_arduino_lib='rm -rf ~/sketchbook/libraries/ros_lib; rosrun rosserial_arduino make_libraries.py ~/sketchbook/libraries'
