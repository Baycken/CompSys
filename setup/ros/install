#!/bin/bash
#
# Install ROS Jade Turtle on Ubuntu 14.04 LTS

echo "Adding ROS PPA..."
sudo sh -c 'echo "deb http://packages.ros.org/ros/ubuntu trusty main"
  > /etc/apt/sources.list.d/ros-latest.list'

echo "Getting ROS apt verification key..."
sudo apt-key adv --keyserver hkp://pool.sks-keyservers.net \
  --recv-key 0xB01FA116

echo "Updating apt package list..."
sudo apt-get -qq update

echo "Installing ROS..."
sudo apt-get -y install ros-jade-desktop-full \
  ros-jade-rosserial \
  ros-jade-rosserial-python \
  ros-jade-rosserial-arduino \
  python-rosinstall

echo "Setting up ROS dependencies..."
sudo rosdep init
rosdep update

echo "Done."
